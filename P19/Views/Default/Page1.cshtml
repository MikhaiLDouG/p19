<body>
    @using P19
    @{
        var book = new Book();
        var num = book.GetNumber(1);

        <div style="margin-left: 20px; margin-top:20px">
            <p>id: @num.Id</p>
            <p>Фамилия: @num.Surname</p>
            <p>Имя: @num.Name</p>
            <p>Отчество: @num.Name2</p>
            <p>Адрес: @num.Address</p>
            <p>Телефон: @num.Phone</p>
            <p>Описание: @num.Description</p>

        </div>
        }
    </body>
